<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Itinerary List</title>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      max-width: 800px;
      margin-top: 50px;
    }
    .table th, .table td {
      vertical-align: middle;
    }
    .table th {
      font-size: 1rem;
      font-weight: bold;
      color: #495057;
      background-color: #f5f5f5;
    }
    .table-hover tbody tr:hover {
      background-color: #e9ecef;
    }
    .btn-edit {
      color: #007bff;
      text-decoration: underline;
      cursor: pointer;
    }
    .btn-edit:hover {
      color: #0056b3;
    }
    .btn-delete {
      color: #dc3545;
      text-decoration: underline;
      cursor: pointer;
    }
    .btn-delete:hover {
      color: #bd2130;
    }
  </style>
</head>
<body>
  <%- include ('partials/navbar.ejs') %>
  <div class="container">
    <h2 class="text-center mb-4">Itinerary List</h2>
    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="150">Country</th>
          <th width="100">Start Date</th>
          <th width="100">End Date</th>
          <th width="100">Budget</th>
          <th width="75">Edit</th>
          <th width="75">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < iti.length; i++) { %>
        <tr>
          <td><a href="/itinerary/<%= iti[i].itiID %>"><%= iti[i].destination %></a></td>
          <td><%= new Date(iti[i].start).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></td>
          <td><%= new Date(iti[i].end).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></td>
          <td>$ <%= iti[i].budget.toFixed(2) %></td>
          <td><a href="/editItinerary/<%= iti[i].itiID %>" class="btn-edit">Edit</a></td>
          <td><a href="/deleteItinerary/<%= iti[i].itiID %>" class="btn-delete" onclick="return confirm('Are you sure you want to delete this Itinerary?')">Delete</a></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
